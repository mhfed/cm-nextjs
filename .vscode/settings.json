{
  // Format code tự động khi save
  "editor.formatOnSave": true,
  // Sử dụng Prettier làm formatter mặc định
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Tự động fix lỗi và sắp xếp imports khi save
  "editor.codeActionsOnSave": {
    "source.fixAll": "true",
    "source.organizeImports": "true"
  },

  // Cấu hình tab và khoảng trắng
  "editor.tabSize": 2, // Độ rộng của tab là 2 spaces
  "editor.insertSpaces": true, // Sử dụng spaces thay vì tab

  // Cấu hình file
  "files.trimTrailingWhitespace": true, // Xóa khoảng trắng thừa cuối dòng
  "files.insertFinalNewline": true, // Thêm dòng trống cuối file

  // Cấu hình import path
  "javascript.preferences.importModuleSpecifier": "non-relative", // Sử dụng absolute imports
  "typescript.preferences.importModuleSpecifier": "non-relative", // thay vì relative imports

  // Mỗi phần này chỉ định Prettier là formatter mặc định
  // cho từng loại file cụ thể
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
